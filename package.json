{
    "name": "napi-template",
    "version": "1.0.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kenobi-io/napi-template.git"
    },
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/kenobi-io/napi-template/issues"
    },
    "homepage": "https://github.com/kenobi-io/napi-template#readme",
    "scripts": {
        "build": "nest build",
        "format": "prettier 'apps/**/*.ts' 'libs/**/*.ts' --write -c",
        "lint": "eslint '{src,apps,libs,test}/**/*.ts' --quiet --fix --cache --cache-location '.cache/.eslintcache'",
        "prebuild": "rimraf dist",
        "prepare": "husky install",
        "serve:watch": "nest start --watch",
        "serve:watch-debug": "nest start --debug --watch",
        "start": "nest start",
        "start:prod": "node dist/main",
        "test": "jest --cache",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e:watch": "jest --config ./apps/auth/test/jest-e2e.json --watch"
    },
    "dependencies": {
        "@nestjs/common": "^8.4.7",
        "@nestjs/core": "^8.4.7",
        "@nestjs/mapped-types": "^1.0.1",
        "@nestjs/microservices": "^8.4.7",
        "@nestjs/platform-express": "^8.4.7",
        "@nestjs/swagger": "^5.2.1",
        "@prisma/client": "^4.0.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.5.5"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.2.8",
        "@nestjs/schematics": "^8.0.11",
        "@nestjs/testing": "^8.4.7",
        "@types/express": "^4.17.13",
        "@types/jest": "28.1.3",
        "@types/node": "^18.0.0",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "eslint": "^8.18.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsdoc": "^39.3.3",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^4.1.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "husky": "^8.0.1",
        "jest": "28.1.2",
        "prettier": "^2.7.1",
        "prisma": "^4.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^6.2.3",
        "ts-jest": "28.0.5",
        "ts-loader": "^9.3.1",
        "ts-node": "^10.8.1",
        "tsconfig-paths": "4.0.0",
        "typescript": "^4.3.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/apps/",
            "<rootDir>/libs/"
        ],
        "moduleNameMapper": {
            "^util/util(|/.*)$": "<rootDir>/libs/util/src/$1"
        }
    }
}
